<div class='row ml-1'>
<div class="nested-fields">

    <div class='col form-group'>   
        <%= f.label "Cepa" %></div>
        <%= f.collection_select :strain_id, Strain.all, :id, :name, class:'form-control-lg' %>   
    </div>

    <div class="col form-group">
        <%= f.label "Porcentaje" %>
        <%= f.number_field :percentage, class:'form-control' %>
    </div>

    <div class='col d-flex align-items-center'>
        <%= link_to_remove_association "Eliminar", f %>
    </div>
</div>
</div>