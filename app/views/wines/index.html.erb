<p id="notice"><%= notice %></p>
<div class='container'>
  <h1>Vinos</h1>

  <table class='table border border-dark'>
    <thead class='thead-dark'>
      <tr>
        <th scope='col'>Nombre</th>
        <th scope='col'>Viña</th>
        <th scope='col'>Año</th>
        <th scope='col'>Cepas</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @wines.each do |wine| %>
        <tr>
          <td class='align-middle'><%= wine.name %></td>
          <td class='align-middle'><%= wine.wineyard %></td>
          <td class='align-middle'><%= wine.year %></td>
          <td class='align-middle'>
            <ul class='list-group list-group-flush'>
              <% wine.ordered.each do |blend| %>
                <li class='list-group-item border-0'><%= blend[0]%><%= "  (#{blend[1]})"  %></li>
              <% end %>
            </ul>
          </td>
          <td class='align-middle'><%= link_to 'Editar', edit_wine_path(wine), class:'text-black-50' %></td>
          <td class='align-middle'><%= link_to 'Eliminar', wine, method: :delete, data: { confirm: '¿Está seguro de eliminar este registro?' }, class:'text-black-50' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Agregar Vino', new_wine_path %>   |   
  <%= link_to 'Ir a Cepas', strains_path %>
</div>
